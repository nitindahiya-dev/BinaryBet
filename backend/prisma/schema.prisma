datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  wallet    String   @unique
  username  String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bets      Bet[]
}

model Match {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  startTime   DateTime    // When the match is scheduled to start
  status      String      // e.g., "upcoming", "live", "completed"
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  bets        Bet[]
}

model Bet {
  id          Int      @id @default(autoincrement())
  userId      Int
  matchId     Int
  betChoice   String   // "even" or "odd"
  amount      Float
  outcome     String   // "Win" or "Loss"
  result      Float    // Winning amount (0 if lost)
  multiplier  Float?   // Optional multiplier applied to the bet
  timestamp   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
  match       Match    @relation(fields: [matchId], references: [id])
}
